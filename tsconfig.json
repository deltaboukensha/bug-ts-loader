{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "*": ["./src/*", "./@types/*", "./test/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": [
      "@types/*",
      "node_modules/@types/*"
    ],
    "types": ["node", "mocha"]
  },
  "exclude": ["dist"]
}
